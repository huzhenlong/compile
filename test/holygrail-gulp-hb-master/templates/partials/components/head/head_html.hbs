<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">

<!-- HEY! Stop looking up my skirt ;) -->

{{!
    Title generation:
}}
{{#if file.frontMatter.title }}
    {{#if site.title }}
        <title>{{ file.frontMatter.title }} | {{ site.title }}</title>
    {{ else }}
        <title>{{ file.frontMatter.title }}</title>
    {{/if}}
{{ else }}
    {{#if site.title }}
        <title>{{ site.title }}</title>
    {{ else }}
        <title>WARNING: No title</title>
    {{/if}}
{{/if}}

{{!
    Responsive Viewport
}}
<meta name="viewport" content="width=device-width, initial-scale=1">


{{!
    rel="canonical"
}}
{{#if file.frontMatter.rel_canonicaal }}
    <!-- rel="canonical" to avoid duplicate content being crawled -->
    <link rel="canonical" href="{{ file.frontMatter.rel_canonicaal }}" />
{{/if}}

{{!
    Description & Keywords
}}
<!-- Description & Keywords -->
{{#if file.frontMatter.description }}
    <meta name="description" content="{{ file.frontMatter.description }}">
{{ else }}
    {{#if site.description }}
        <meta name="description" content="{{ site.description }}">
    {{/if}}
{{/if}}

{{!
    Keywords
}}
{{#if site.keywords }}
    <meta name="keywords" content="{{ site.keywords }}">
{{/if}}

{{!
    Author / Credit
}}
<!-- Author / Credit -->
<meta name="author" content="{{ site.author }}">
<link type="text/plain" rel="author" href="{{ file.frontMatter.base_url }}humans.txt" />

{{!
    Google Webmaster Tools Site Verification
}}
{{#if google.site_verification_code }}
    <!-- Google Webmaster Tools Site Verification -->
    <meta name="google-site-verification" content="{{ google.site_verification_code }}" />
{{/if}}

{{!
    Favicon
    - Generated by hand at http://realfavicongenerator.net
}}
{{> "components/head/favicons" }}

{{!
    Open Graph & Socials
}}
<!-- Open Graph & Social Sharing -->
<meta property="og:locale" content="en_US" />

{{!
    OG Site Title
}}
{{#if site.title }}<meta property="og:site_name" content="{{ site.title }}"/>{{/if}}

{{!
    OG Google, Facebook Publisher Information
}}
{{#if site.social.gplus }}<link rel="publisher" href="{{ site.social.gplus }}"/>{{/if }}
{{#if site.social.facebook }}<meta property="article:publisher" content="{{ site.social.facebook }}"/>{{/if}}

{{!
    OG Type
}}
{{#if file.frontMatter.og_type }}
    <meta property="og:type" content="{{ file.frontMatter.og_type }}" />
{{/if }}

{{!
    OG Title
}}
{{#if file.frontMatter.title }}
    {{#if site.title }}
        <meta property="og:title" content="{{ file.frontMatter.title }} | {{ site.title }}" />
    {{ else }}
        <meta property="og:title" content="{{ file.frontMatter.title }}" />
    {{/if}}
{{ else }}
    {{#if site.title }}<meta property="og:title" content="{{ site.title }}" />{{/if}}
{{/if}}

{{!
    OG Description
}}
{{#if file.frontMatter.description }}
    <meta property="og:description" content="{{ file.frontMatter.description }}" />
{{/if}}

{{!
    OG URL
}}
{{#if public_url }}
    {{#if file.frontMatter.relative_url }}
        <meta property="og:url" content="{{ public_url }}{{ file.frontMatter.relative_url }}" />
    {{/if}}
{{/if}}

{{!
    OG Image
}}
{{#if public_url }}
    {{#if file.frontMatter.og_image }}
        <meta property="og:image" content="{{ public_url }}{{ file.frontMatter.og_image }}" />
    {{ else }}
        <meta property="og:image" content="{{ public_url }}{{ img_base_url }}/icons/open_graph.png" />
    {{/if}}
{{/if}}

{{!
    OG Twitter
}}
{{#if public_url }}

    {{! User Twitter Account }}
    {{#if site.social.twitter.username }}
        <meta name="twitter:card" content="summary" />
        <meta name="twitter:site" content="@{{ site.social.twitter.username }}" />
        <meta name="twitter:creator" content="@{{ site.social.twitter.username }}"/>
    {{/if}}

    {{! Domain }}
    {{#if public_domain }}<meta name="twitter:domain" content="{{ public_domain }}"/>{{/if}}

    {{! Title }}
    {{#if file.frontMatter.title }}
        {{#if site.title }}
            <meta name="twitter:title" content="{{ file.frontMatter.title }} | {{ site.title }}" />
        {{ else }}
            <meta name="twitter:title" content="{{ file.frontMatter.title }}" />
        {{/if}}
    {{ else }}
        {{#if site.title }}<meta name="twitter:title" content="{{ site.title }}" />{{/if}}
    {{/if}}

    {{! Description }}
    {{#if file.frontMatter.description }}
        <meta name="twitter:description" content="{{ file.frontMatter.description }}" />
    {{/if}}

    {{! Image }}
    {{#if file.frontMatter.og_image }}
        <meta name="twitter:image:src" content="{{ public_url }}{{ file.frontMatter.og_image }}" />
    {{ else }}
        <meta name="twitter:image:src" content="{{ public_url }}{{ img_base_url }}/icons/open_graph.png" />
    {{/if}}
{{/if}}

{{!
    External Fonts
}}
<link href="http://fonts.googleapis.com/css?family=Roboto+Slab" rel="stylesheet" type="text/css">

{{!
    CSS Assets
}}
<!-- Base CSS -->
<link href="{{ file.frontMatter.base_url }}{{ css_base_url }}/vendor/prism.css" rel="stylesheet" media="screen">
<link href="{{ file.frontMatter.base_url }}{{ css_base_url }}/font_awesome.css" rel="stylesheet" media="screen">
<link id="main_css" href="{{ file.frontMatter.base_url }}{{ css_base_url }}/main.css" rel="stylesheet" media="screen">

{{#if file.frontMatter.page_css_assets }}
    {{{render_assets "css" file.frontMatter.page_css_assets this }}}
{{/if}}

<!-- Vendor JS -->
<script src="{{ file.frontMatter.base_url }}{{ js_base_url }}/vendor/modernizr/modernizr.js"></script>
<script src="{{ file.frontMatter.base_url }}{{ js_base_url }}/vendor/respond/respond.min.js"></script>
<script src="{{ file.frontMatter.base_url }}{{ js_base_url }}/vendor/jquery/jquery.js"></script>
<script src="{{ file.frontMatter.base_url }}{{ js_base_url }}/vendor/jquery/jquery.js"></script>
<script src="{{ file.frontMatter.base_url }}{{ js_base_url }}/vendor/jquery.detect_swipe.js"></script>
<script src="{{ file.frontMatter.base_url }}{{ js_base_url }}/vendor/holygrail/navigation.js"></script>
<script src="{{ file.frontMatter.base_url }}{{ js_base_url }}/vendor/holygrail/sidebars.js"></script>
<script src="{{ file.frontMatter.base_url }}{{ js_base_url }}/vendor/prism/prism.js"></script>
<script src="{{ file.frontMatter.base_url }}{{ js_base_url }}/vendor/prism/prism-scss.js"></script>
<script src="{{ file.frontMatter.base_url }}{{ js_base_url }}/vendor/prism/prism-handlebars.js"></script>

{{#if file.frontMatter.page_js_assets }}
    {{{render_assets "js" file.frontMatter.page_js_assets this }}}
{{/if}}

<!-- Site-specific JS -->
<script src="{{ file.frontMatter.base_url }}{{ js_base_url }}/main.js"></script>

{{!
    Google Anaylitics
}}
{{#if google.ga_tracking_code }}
    <!-- Google Analytics -->
    <script>
    var _gaq = _gaq || [];
    _gaq.push(["_setAccount", "{{ google.ga_tracking_code }}"]);
    _gaq.push(["_trackPageview"]);

    (function() {
     var ga = document.createElement("script"); ga.type = "text/javascript"; ga.async = true;
     ga.src = ("https:" == document.location.protocol ? "https://ssl" : "http://www") + ".google-analytics.com/ga.js";
     var s = document.getElementsByTagName("script")[0]; s.parentNode.insertBefore(ga, s);
    })();
    </script>
{{/if}}
